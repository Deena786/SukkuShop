@model SukkuShop.Models.NewOrderAddressFirmaModel

@using (Ajax.BeginForm(MVC.Zamowienie.NewAddressOrderFirmaPartial(), new AjaxOptions { UpdateTargetId = "newaddress-replace", HttpMethod = "POST", InsertionMode = InsertionMode.Replace, OnSuccess = "clientDataAjaxSuccess()", OnBegin = "showAjaxLoader()" }, new { id = "NewClientFormFirma" }))
{
    <div class="left-container">
        <div class="client-type-text">Jestem nowym klientem</div>
        <div class="newaddress-box">
            @Html.RadioButtonFor(m => m.Firma, false, new { @class = "css-checkbox", id = "firmafalse" })
            @Html.LabelFor(m => m.Firma, "osoba prywatna", new { @class = "css-label", @for = "firmafalse" })
            @Html.RadioButtonFor(m => m.Firma, true, new { @class = "css-checkbox", id = "firmatrue", @checked = true })
            @Html.LabelFor(m => m.Firma, "firma", new { @class = "css-label", @for = "firmatrue" })
        </div>
        <div class="data-box">
            @Html.LabelFor(m => m.Email, "e-mail*:", new { @class = "text" })
            @Html.TextBoxFor(m => m.Email, new { name = "email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="data-box">
            @Html.LabelFor(m => m.NazwaFirmy, "nazwa firmy*:", new { @class = "text" })
            @Html.TextBoxFor(m => m.NazwaFirmy, new { name = "imie" })
            @Html.ValidationMessageFor(m => m.NazwaFirmy)
        </div>
        <div class="data-box">
            @Html.LabelFor(m => m.Nip, "NIP*:", new { @class = "text" })
            @Html.TextBoxFor(m => m.Nip, new { name = "nazwisko" })
            @Html.ValidationMessageFor(m => m.Nip)
        </div>
        <div class="data-box">
            @Html.LabelFor(m => m.Ulica, "ulica*:", new { @class = "text" })
            @Html.TextBoxFor(m => m.Ulica, new { name = "ulica" })
            @Html.ValidationMessageFor(m => m.Ulica)
        </div>
        <div class="data-box">
            @Html.LabelFor(m => m.Numer, "numer*:", new { @class = "text" })
            @Html.TextBoxFor(m => m.Numer, new { name = "numer" })
            @Html.ValidationMessageFor(m => m.Numer)
        </div>
        <div class="data-box">
            @Html.LabelFor(m => m.Miasto, "miasto*:", new { @class = "text" })
            @Html.TextBoxFor(m => m.Miasto, new { name = "miasto" })
            @Html.ValidationMessageFor(m => m.Miasto)
        </div>
        <div class="data-box">
            @Html.LabelFor(m => m.KodPocztowy, "kod pocztowy*:", new { @class = "text" })
            @Html.TextBoxFor(m => m.KodPocztowy, new { name = "kodpocztowy" })
            @Html.ValidationMessageFor(m => m.KodPocztowy)
        </div>
        <div class="data-box" style="margin-bottom: 25px">
            @Html.LabelFor(m => m.Telefon, "telefon*:", new { @class = "text" })
            @Html.TextBoxFor(m => m.Telefon, new { name = "telefon" })
            @Html.ValidationMessageFor(m => m.Telefon)
        </div>
        <div class="newaddress-box">
            @Html.CheckBoxFor(m => m.NewAccount, new { @class = "css-checkbox", required = true })
            @Html.LabelFor(m => m.NewAccount, "Chcę założyć konto klienta", new { @class = "css-label" })
        </div>
        <div class="data-box">
            @Html.LabelFor(m => m.Password, "hasło*:", new { @class = "text" })
            @Html.PasswordFor(m => m.Password, new { name = "hasło", disabled = true })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="data-box" style="margin-bottom: 25px">
            @Html.LabelFor(m => m.ConfirmPassword, "powtórz hasło*:", new { @class = "text" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { name = "confirmpassword", disabled = true })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>
    <div class="clear" style="clear: both"></div>
    <div id="checkboxes-container">
        <div class="box">
            @Html.CheckBoxFor(m => m.Regulamin, new { @class = "css-checkbox", required = true })
            @Html.LabelFor(m => m.Regulamin, "Zapoznałem/am się i akceptuję regulamin sklepu SUKKU.PL*", new { @class = "css-label", style = "margin-bottom: 2px" })
            <div class="clear" style="clear: both"></div>
            @Html.ValidationMessageFor(m => m.Regulamin)
        </div>
        <div class="box-big">
            @Html.CheckBoxFor(m => m.Daneosobowe, new { @class = "css-checkbox", required = true })
            @Html.LabelFor(m => m.Daneosobowe, @"Wyrażam zgodę na przetwarzanie moich danych osobowych w celu rejestracji konta
            oraz realizacji zamówienia przez sklep internetowy SUKKU.PL prowadzony
            przez Smaki Orientu: Magdalena Agani-Chowaniec z siedzibą w: 32-650 Kęty,
            ul. Świętokrzyska 9A, która jest administratorem danych osobowych. Zgodnie z ustawą
            z dnia 29.08.1997r. każdy Klient ma prawo wglądu do swoich danych, ich poprawiania, zarządzania,
            zaprzestania przetwarzania oraza zażądania ich usunięcia. Podanie danych jest dobrowolne,
            ale brak zgody uniemożliwia założenie konta i realizację zamówienia.*", new { @class = "css-label", style = "margin-bottom: 2px" })
            @Html.ValidationMessageFor(m => m.Daneosobowe)
        </div>
    </div>
    <div class="data-box" style="margin-bottom:20px">
        <div class="text">(*)-POLA OBOWIĄZKOWE</div>
    </div>
}